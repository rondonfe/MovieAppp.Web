@model List<Genre>  // Bu view’e C# tarafında bir "List<Genre>
    " (tür listesi) gönderiliyor.

    <div class="list-group">
        <!-- "Tüm Filmler" linki. Eğer hiçbir kategori seçilmemişse aktif class'ı eklenir. -->
        <a href="/movies/list"
           class="list-group-item list-group-item-action  @(ViewBag.SelectedGenre == null ? "active" : "") ">
            Tüm Filmler
        </a>

        <!-- Her bir kategori için link oluşturuluyor -->
        @foreach (var genre in Model)  // Model, Genre listesidir.
        {
            <a href="/movies/list/@genre.GenreId"
               class="list-group-item list-group-item-action
                      @(ViewBag.SelectedGenre == genre.GenreId.ToString() ? "active" : "")">
                @genre.Name <!-- Kullanıcıya kategori adı gösterilir -->
            </a>
        }
    </div>
